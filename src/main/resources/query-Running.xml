<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="runningQueryEntities" class="com.rackspace.telegrafhomebase.config.QueryEntities">
        <constructor-arg>
            <list>

                <bean class="org.apache.ignite.cache.QueryEntity">
                    <property name="keyType" value="com.rackspace.telegrafhomebase.model.RunningKey"/>
                    <property name="valueType" value="java.lang.String"/>

                    <property name="keyFields">
                        <list>
                            <value>id</value>
                            <value>region</value>
                        </list>
                    </property>
                    <property name="fields">
                        <map>
                            <entry key="id" value="java.lang.String"/>
                            <entry key="region" value="java.lang.String"/>
                        </map>
                    </property>

                    <property name="indexes">
                        <list>
                            <bean class="org.apache.ignite.cache.QueryIndex">
                                <constructor-arg>
                                    <list>
                                        <value>region</value>
                                        <value>id</value>
                                    </list>
                                </constructor-arg>
                                <constructor-arg value="SORTED"/>
                            </bean>
                        </list>
                    </property>
                </bean>

            </list>
        </constructor-arg>
    </bean>
</beans>